<%- include('partials/headers/header') %>

<!-- Navbar Title  -->

<%- include("partials/navbar") %>

<!-- Carousel -->

<div id="main-carousel" class="carousel slide" data-ride="carousel">

    <!-- items -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://getoutfit.sirv.com/Banner.png" alt="slide">
        </div>
        <!-- Loop for carousel  -->
        <% for( let index = 0; index < 5; index++ ) { %>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://getoutfit.sirv.com/Banner.png" alt="slide">
        </div>
        <% } %>
    </div>

    <!-- Controls  -->
    <a class="carousel-control-prev" href="#main-carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#main-carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

</div>


<!-- Horizontal Scroll Zone -->

<div class="container" style="margin-top: 1.5rem;">

    <!-- Title  -->
    <div class="fluid-container" style="display: flex; justify-content: center; padding: 1rem;">
        <h3 class="home-top-deal">Shop Top Deals</h3>
        <button class="btn btn-dark view-btn" style="position: absolute; right: 1rem;">View All</button>
    </div>

    <!-- Scroll Items  -->
    <div class="scrollmenu shadow bg-white rounded">
        <div class=" row-cols-2 row-cols-md-3 row-cols-lg-4 ">
            <!-- Loop for Horizontal scrollmenu -->
            <% for( let index = 0; index < 8; index++ ) { %>
            <a href="/product/<%= product._id %> " class="col mb-2">
                <div class="card h-100 shadow bg-white rounded card-home">
                    <img src="images/product.png" class="card-img-top img-fluid img-thumbnail" alt="product-image">
                </div>
            </a>
            <% } %>
        </div>
    </div>

    <!-- Horizontal Scroll Zone Ends -->

</div>

<!-- Banners  -->
<div class="container" style="margin-top: 1.5rem;">
    <div class="row row-cols-1 row-cols-md-2">
        <!-- Loop for banners  -->
        <% for( let index = 0; index < 2; index++ ) { %>
        <a href="/product">
            <div class="col p-3">
                <div class="card">
                    <img src="https://getoutfit.sirv.com/Banner.png" class="card-img-top" alt="...">

                </div>
            </div>
        </a>
        <% } %>

    </div>
</div>


<!-- Products  -->
<div class="container" style="margin-top: 1.5rem;">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 ">
        <!-- Loop for showing products  -->
        <% for( let index = 0; index < 8; index++ ) { %>
        <a href="/product" style="text-decoration: none; color: #000;">
            <div class="col mb-4">
                <div class="card">
                    <img src="images/product.png" class="card-img-top img-fluid img-thumbnail" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Item Title</h5>
                        <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
                            tempor incididunt ut labore et dolore magna aliqua.</p>
                        <p class="card-text"><b>Rs. 100</b></p>
                        <button type="button" class="btn btn-dark btn-sm">Add to Cart</button>
                        <button type="button" class="btn btn-warning btn-sm">Buy Now</button>
                    </div>
                </div>
            </div>
        </a>
        <% } %>
    </div>

</div>


<!-- Extra Banners  -->
