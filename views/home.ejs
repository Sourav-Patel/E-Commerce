<%- include('partials/headers/header') %>

<!-- Navbar Title  -->
<div class="fluid-container navbar-title">
    <a class="navbar-brand" href="#">AVR Solutions</a>
</div>

<!-- Sub Navbar  -->
<div class="fluid-container sub-navbar">

    <!-- Sub Navbar links  -->

    <ul class="navbar-ul">

        <li class="nav-item">
            <a class="nav-link" href="#">Home</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="/about">About us</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="/products">Products</a>
        </li>

        <!-- Categories Dropdown -->

        <div class="dropdown">
            <button class="btn btn-navbar dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                Categories
            </button>

            <!-- Sub Categories Menu List-->
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Sub Categories</a>
            </div>

        </div>

        <li class="nav-item">
            <a class="nav-link" href="/blog">Blog</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="/contact">Contact us</a>
        </li>

    </ul>

</div>

<!-- Carousel -->
<div id="main-carousel" class="carousel slide" data-ride="carousel">

    <!-- item numbers -->
    <ol class="carousel-indicators">
        <li data-target="#main-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#main-carousel" data-slide-to="1"></li>
        <li data-target="#main-carousel" data-slide-to="2"></li>
    </ol>

    <!-- items -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="images/carousel.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="images/carousel.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="images/carousel.jpg" alt="Third slide">
        </div>
    </div>

    <!-- Controls  -->
    <a class="carousel-control-prev" href="#main-carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#main-carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

</div>

